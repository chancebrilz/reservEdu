<div id="sidebar">
    <nav>
      {{#link-to 'index' classNames='navbar-brand'}}
        Home
      {{/link-to}}

      {{#link-to 'app' classNames='navbar-brand'}}
        App
      {{/link-to}}

      {{#if session.isAuthenticated}}
        <button onclick={{action 'invalidateSession'}}>Logout</button>
        {{#if currentUser.user}}
          <p>Signed in as {{currentUser.user.name}}</p>
        {{/if}}
      {{else}}
          {{#link-to 'login'}}Login{{/link-to}}
      {{/if}}
    </nav>
</div>
